    <script>
        const heroSlides = document.querySelectorAll('.hero-slide');
        const heroContents = document.querySelectorAll('.hero-content');
        let currentSlide = 0;
        const slideInterval = 5000;
        const additionalHero = document.querySelector('.additional-hero');
        let lastScrollY = window.scrollY;

        function showNextSlide() {
            heroSlides[currentSlide].classList.remove('active');
            heroContents[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % heroSlides.length;
            heroSlides[currentSlide].classList.add('active');
            heroContents[currentSlide].classList.add('active');
        }

        setInterval(showNextSlide, slideInterval);

        window.addEventListener('scroll', () => {
    const currentScrollY = window.scrollY;
    if (currentScrollY > window.innerHeight * 0.8) { 
        additionalHero.classList.add('active');
    } 
});
const boxes = document.querySelectorAll('.box');

window.addEventListener('scroll', () => {
    boxes.forEach(box => {
        const boxTop = box.getBoundingClientRect().top;
        const triggerPoint = window.innerHeight * 0.8;

        if (boxTop < triggerPoint) {
            box.classList.add('active');
        }
    });
});
let currentGroupIndex = 0;
let currentImageIndex = 0;

const imageGroups = [
    ["Mens Fellowhip.jpg", "Mens Fellowship II.jpg"],
    ["Womens Fellowhip.jpg", "Womens Fellowship II.jpg"],
    ["Youth Ministry.jpg", "Youth Ministry II.jpg"],
    ["Children Ministry.jpg", "Children Ministry II.jpg"]
];

function openPreview(groupIndex, imageIndex) {
    currentGroupIndex = groupIndex;
    currentImageIndex = imageIndex;

    const previewImage = document.getElementById("previewImage");
    previewImage.src = imageGroups[currentGroupIndex][currentImageIndex];

    document.getElementById("imageModal").style.display = "flex";
}

function changeImage(direction) {
    const group = imageGroups[currentGroupIndex];
    currentImageIndex = (currentImageIndex + direction + group.length) % group.length;

    const previewImage = document.getElementById("previewImage");
    previewImage.src = group[currentImageIndex];
}

function closePreview() {
    document.getElementById("imageModal").style.display = "none";
}
    </script>
